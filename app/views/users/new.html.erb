<% unless  @user.errors.full_messages.empty? %>
  <%= render partial: 'layouts/errors', :locals => {:errors => @user.errors.full_messages}%>
<% end %>
<div class="form-container">
<%= form_for @user, url: signup_path do |f| %>
  <div class="form-title">Sign Up</div>
  <div class = "form-group">
    <%= f.label :username, class: 'form-control' %>
    <%= f.text_field :username, placeholder: 'username' %>
  </div>
  <div class = "form-group">
    <%= f.label :email, class: 'form-control' %>
    <%= f.email_field :email, placeholder: 'example@example.com' %>
  </div>
  <div class = "form-group">
    <%= f.label :password, class: 'form-control' %>
    <%= f.password_field :password, placeholder: 'password' %>
  </div>
    <div class = "form-group">
    <%= f.label 'password confirmation', class: 'form-control' %>
    <%= f.password_field :password_confirmation, placeholder: 'password' %>
  </div>
  <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
<% end %>